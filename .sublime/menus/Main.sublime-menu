[
    {
        "id": "preferences",
        "children":
        [
            {
                "id": "package-settings",
                "children":
                [
                    {
                        "caption": "distractionless",
                        "children":
                        [
                            {
                                "caption": "Settings",
                                "command": "edit_settings",
                                "args":
                                {
                                    "base_file": "${packages}/distractionless/.sublime/settings/distractionless.sublime-settings",
                                    "default": "{\n\t\"distractionless.toggle_after\": ${1:1}\n}\n"
                                }
                            },
                            { "caption": "-" },
                            {
                                "caption": "Changelog",
                                "command": "open_url",
                                "args":
                                {
                                    "url": "https://github.com/jrappen/sublime-distractionless/blob/master/CHANGELOG.md"
                                }
                            },
                            {
                                "caption": "Documentation",
                                "children":
                                [
                                    {
                                        "caption": "English",
                                        "command": "distractionless_open_docs",
                                        "args":
                                        {
                                            "resource_path": "docs/README.en.md"
                                        }
                                    },
                                    {
                                        "caption": "German (Deutsch)",
                                        "command": "distractionless_open_docs",
                                        "args":
                                        {
                                            "resource_path": "docs/README.de.md"
                                        }
                                    }
                                ]
                            },
                            { "caption": "-" },
                            {
                                "caption": "Issues",
                                "command": "open_url",
                                "args":
                                {
                                    "url": "https://github.com/jrappen/sublime-distractionless/issues"
                                }
                            },
                            { "caption": "-" },
                            {
                                "caption": "Donations",
                                "command": "open_url",
                                "args":
                                {
                                    "url": "https://www.paypal.me/jrappen"
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
]
